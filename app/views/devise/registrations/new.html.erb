<% content_for :back_path, root_path %>
<% content_for :page_name, "REGISTER" %>

<% content_for :nav_button do %>
  <%= button_tag "Next", type: "submit", form: "new_user", class: "nav-link text-white" %>
<% end %>

<section class='my-4 opacity-60'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= 
        f.text_field :name,
        placeholder: "Full name", 
        autocomplete: "Full name",
        class: 'w-full border-b-0 border-l-0 border-r-0 py-3 text-base text-dark-3 border-t-[0.5px] border-dark-4' 
      %>
    </div>

    <div class="field">
      <%= 
        f.email_field :email,
        placeholder: "Email",  
        autocomplete: "email",
        class: 'w-full border-b-0 border-l-0 border-r-0 py-3 text-base text-dark-3 border-t-[0.5px] border-dark-4'
      %>
    </div>

    <div class="field">
      <%= 
        f.password_field :password,
        placeholder: "Password",
        autocomplete: "new-password",
        class: 'w-full border-l-0 border-r-0 py-3 text-base text-dark-3 border-y-[0.5px] border-dark-4'
      %>
    </div>
  <% end %>

  <div class="my-5 w-full flex items-center justify-center">
    <%= render "devise/shared/links" %>
  </div>

</section>